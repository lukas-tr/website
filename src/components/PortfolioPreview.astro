---
import type { MarkdownInstance } from "astro";
import type { Project } from "../types";

interface Props {
  project: MarkdownInstance<Project>;
}

const { frontmatter, url } = Astro.props.project;
---

<div class="card">
  <div
    class="card-background"
    style={`background-image:url(${frontmatter.img})`}
  >
    <h2 class="card-title">{frontmatter.title}</h2>
  </div>
  <div class="card-text">
    <img class="card-logo" src={frontmatter.logo} />
    <p>{frontmatter.description}</p>
  </div>
  <a class="link" href={url}>
    <span class="button">View</span>
  </a>
</div>

<style>
  .card-logo {
    position: absolute;
    top: 0;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 100px;
    height: 100px;
  }
  .card-text {
    position: relative;
    padding-top: 50px;
    text-align: center;
  }
  .card-title {
    text-align: center;
    position: absolute;
    top: 0;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0;
    color: var(--background-color);
    flex-direction: column;
    font-weight: 900;
    letter-spacing: 0.0625em;
    backdrop-filter: brightness(40%);
  }

  .card-background {
    position: relative;
    background-size: cover;
    background-position: 50% 100%;
    padding-top: 37.5%;
  }
  .link {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    background: rgba(var(--primary-color-rgb), 0.25);
    opacity: 0;
    text-decoration: none;
    transition: opacity 150ms linear;
  }

  .link:focus,
  .link:hover {
    opacity: 1;
  }

  .link:focus {
    transform: translateY(0);
    border-color: rgba(255, 255, 255, 0.625);
  }
</style>
